<UserControl x:Class="SteamAutoMarket.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="FlatButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Height" Value="150" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Margin" Value="0,0,20,20" />
            <Setter Property="Padding" Value="0,15,0,5" />
        </Style>

        <Style x:Key="FlatText" TargetType="TextBlock" BasedOn="{StaticResource Heading2}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="0,2,0,0" />
        </Style>
    </UserControl.Resources>
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200" HorizontalAlignment="Left">
                <TextBlock Style="{StaticResource Heading1}" Text="Find answers" />
                <WrapPanel Margin="0,20,0,0">
                    <Button Style="{StaticResource FlatButton}" Click="SteamLogin_OnClick">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Path Style="{StaticResource Geometry}"
                                  Stretch="Uniform"
                                  Data="{StaticResource SvgSteam}" />

                            <TextBlock Grid.Row="1" Style="{StaticResource FlatText}" Text="Steam login" />
                        </Grid>
                    </Button>                    
                    <Button Style="{StaticResource FlatButton}" Click="LicenseStatus_OnClick">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Path Style="{StaticResource Geometry}"
                                  Stretch="Uniform"
                                  Data="{StaticResource SvgShield}" />

                            <TextBlock Grid.Row="1" Style="{StaticResource FlatText}" Text="License status" />
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource FlatButton}" Click="Update_OnClick">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Path Style="{StaticResource Geometry}"
                                  Stretch="Uniform"
                                  Data="{StaticResource SvgUpdate}" />

                            <TextBlock Grid.Row="1" Style="{StaticResource FlatText}" Text="Update" />
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource FlatButton}" Click="Telegram_OnClick">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Path Style="{StaticResource Geometry}"
                                  Stretch="Uniform"
                                  Data="{StaticResource SvgTelegram}" />

                            <TextBlock Grid.Row="1" Style="{StaticResource FlatText}" Text="Telegram" />
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource FlatButton}" Click="Website_OnClick">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Path Style="{StaticResource Geometry}"
                                  Stretch="Uniform"
                                  Data="{StaticResource SvgInternet}" />

                            <TextBlock Grid.Row="1" Style="{StaticResource FlatText}" Text="Website" />
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource FlatButton}" Click="Documentation_OnClick">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Path Style="{StaticResource Geometry}"
                                  Stretch="Uniform"
                                  Data="{StaticResource SvgHelp}" />

                            <TextBlock Grid.Row="1" Style="{StaticResource FlatText}" Text="Documentation" />
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource FlatButton}" Click="TodoFeatures_OnClick">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Path Style="{StaticResource Geometry}"
                                  Stretch="Uniform"
                                  Data="{StaticResource SvgTodoList}" />

                            <TextBlock Grid.Row="1" Style="{StaticResource FlatText}" Text="TODO features" />
                        </Grid>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>