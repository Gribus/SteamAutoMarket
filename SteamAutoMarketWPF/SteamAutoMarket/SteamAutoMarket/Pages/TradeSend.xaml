<UserControl x:Class="SteamAutoMarket.Pages.TradeSend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
             xmlns:models="clr-namespace:SteamAutoMarket.Models"
             xmlns:converter="clr-namespace:SteamAutoMarket.Utils.Converter"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignData UiDataContext}">

    <UserControl.Resources>
        <converter:IfNullVisibleConverter x:Key="IfNullVisibleConverter" />
        <converter:IfNullInvisibleConverter x:Key="IfNullInvisibleConverter" />
    </UserControl.Resources>

    <Grid Margin="5, 5, 5, 5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="20*" MinWidth="200" MaxWidth="250" />
        </Grid.ColumnDefinitions>

        <xcdg:DataGridControl x:Name="MarketItemsToTradeGrid"
                              Grid.Column="0"
                              Grid.Row="0"
                              Margin="10, 10, 30, 10"
                              AutoCreateColumns="False"
                              Style="{StaticResource GridStyle}">

            <xcdg:DataGridControl.View>
                <xcdg:TableView ShowRowSelectorPane="False" />
            </xcdg:DataGridControl.View>

            <xcdg:DataGridControl.Columns>
                <xcdg:Column Title="Item name"
                             Width="2*"
                             FieldName="ItemName">
                    <xcdg:Column.CellContentTemplate>
                        <ItemContainerTemplate>
                            <TextBlock
                                Text="{Binding}"
                                Foreground="{DynamicResource ItemText}"
                                Background="{DynamicResource DataGridBackground}" />
                        </ItemContainerTemplate>
                    </xcdg:Column.CellContentTemplate>
                </xcdg:Column>

                <xcdg:Column Title="Type"
                             Width="1*"
                             FieldName="Type">
                    <xcdg:Column.CellContentTemplate>
                        <ItemContainerTemplate>
                            <TextBlock
                                Text="{Binding}"
                                Foreground="{DynamicResource ItemText}"
                                Background="{DynamicResource DataGridBackground}" />
                        </ItemContainerTemplate>
                    </xcdg:Column.CellContentTemplate>
                </xcdg:Column>

                <xcdg:Column Title="Count"
                             Width="0.5*"
                             FieldName="Count">
                    <xcdg:Column.CellContentTemplate>
                        <ItemContainerTemplate>
                            <TextBlock
                                Text="{Binding}"
                                Foreground="{DynamicResource ItemText}"
                                Background="{DynamicResource DataGridBackground}" />
                        </ItemContainerTemplate>
                    </xcdg:Column.CellContentTemplate>
                </xcdg:Column>

                <xcdg:Column Title="Amount to send"
                             Width="*"
                             MaxWidth="100"
                             FieldName="MaxAllowedCount"
                             AllowSort="False">
                    <xcdg:Column.CellContentTemplate>
                        <ItemContainerTemplate>
                            <xctk:IntegerUpDown
                                Width="55"
                                Value="0"
                                Increment="1"
                                Maximum="{Binding}"
                                Minimum="0"
                                Foreground="{DynamicResource ItemText}"
                                Background="{DynamicResource DataGridBackground}" />
                        </ItemContainerTemplate>
                    </xcdg:Column.CellContentTemplate>
                </xcdg:Column>
            </xcdg:DataGridControl.Columns>

        </xcdg:DataGridControl>

        <Grid Grid.Column="1"
              Grid.Row="0"
              MinWidth="200"
              MaxWidth="200">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" MinHeight="90" MaxHeight="180" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="0.7*" />
                <RowDefinition Height="*" MinHeight="30" MaxHeight="60" />
                <RowDefinition Height="*" MinHeight="30" MaxHeight="60" />
            </Grid.RowDefinitions>

            <Grid Grid.Column="0"
                  Grid.Row="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Source="{Binding Path=MarketSellSelectedItem.Image}" Stretch="Uniform" MaxHeight="200" />

                <Path Grid.Row="0"
                      Style="{StaticResource Geometry}"
                      Margin="0,0,0,5"
                      Visibility="{Binding Path=MarketSellSelectedItem.Image, Converter={StaticResource IfNullVisibleConverter}}">
                    <Path.Data>
                        <PathGeometry
                            Figures="M 66.667969 41.667969 C 58.332031 41.667969 54.167969 54.167969 47.917969 54.167969 C 41.667969 54.167969 41.671875 50 33.332031 50 C 25 50 20.828125 66.667969 20.828125 66.667969 L 79.167969 66.667969 C 79.167969 66.667969 75 41.667969 66.667969 41.667969 Z M 66.667969 41.667969  M 45.832031 35.421875 C 45.832031 41.175781 41.171875 45.835938 35.417969 45.835938 C 29.664062 45.835938 25 41.175781 25 35.421875 C 25 29.667969 29.664062 25.003906 35.417969 25.003906 C 41.171875 25.003906 45.832031 29.667969 45.832031 35.421875 Z M 45.832031 35.421875 M 83.332031 12.5 L 16.667969 12.5 C 12.070312 12.5 8.332031 16.238281 8.332031 20.832031 L 8.332031 70.832031 C 8.332031 75.429688 12.070312 79.167969 16.667969 79.167969 L 83.332031 79.167969 C 87.929688 79.167969 91.667969 75.429688 91.667969 70.832031 L 91.667969 20.832031 C 91.667969 16.238281 87.929688 12.5 83.332031 12.5 Z M 83.332031 70.832031 L 16.667969 70.832031 L 16.667969 20.832031 L 83.332031 20.832031 Z M 83.332031 70.832031 " />
                    </Path.Data>
                </Path>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Visible"
                              HorizontalScrollBarVisibility="Disabled"
                              Visibility="{Binding ElementName=ItemDescriptionTextBox, Path=Text, Converter={StaticResource IfNullInvisibleConverter}}">
                    <TextBox Name="ItemDescriptionTextBox"
                             MaxHeight="90"
                             Background="Transparent"
                             Foreground="{DynamicResource ItemText}"
                             BorderThickness="0"
                             IsReadOnly="True"
                             Visibility="{Binding ElementName=ItemDescriptionTextBox, Path=Text, Converter={StaticResource IfNullInvisibleConverter}}"
                             Text="{Binding Path=MarketSellSelectedItem.Description, Mode=OneWay}"
                             TextWrapping="Wrap" VerticalAlignment="Center" />
                </ScrollViewer>
            </Grid>

            <Grid Grid.Column="0"
                  Grid.Row="1"
                  Margin="0, 5, 0, 0">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.8*" />
                </Grid.ColumnDefinitions>


                <TextBlock
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="App Id"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left" />

                <TextBlock Text="Context Id"
                           Grid.Column="0"
                           Grid.Row="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="0,0,5,0" />

                <ComboBox Grid.Column="1"
                          IsSynchronizedWithCurrentItem="True"
                          Name="TradeAppidCombobox"
                          ItemsSource="{Binding AppIdList}"
                          SelectedItem="{Binding SelectedTradeAppId}"
                          Text="{Binding NewTradeAppId, UpdateSourceTrigger=LostFocus}"
                          DisplayMemberPath="Name"
                          IsEditable="True"
                          Height="22"
                          Grid.Row="0"
                          Margin="0, 4" />

                <TextBox Text="{Binding ElementName=TradeAppidCombobox, Path=SelectedItem.(models:SteamAppId.ContextId)}"
                         Name="TradeContextIdTextBox"
                         Grid.Column="1"
                         Height="22"
                         Grid.Row="1"
                         Margin="0, 4" />

                <Button Grid.Column="2"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        MaxHeight="40"
                        Margin="8, 0, 0, 0"
                        Content="Load"
                        Padding="0" />

                <CheckBox Grid.Row="2" 
                          Grid.ColumnSpan="3" 
                          Grid.Column="0" 
                          Content="Load only unmarketable" />
            </Grid>

            <Grid Grid.Column="0"
                  Grid.Row="2"
                  Margin="0, 5, 0, 0"
                  MaxHeight="90">

                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="80" Width="70" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>


                <TextBlock Text="Account"
                           Grid.Column="0"
                           Grid.Row="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" />

                <TextBlock Text="Steam ID"
                           Grid.Column="0"
                           Grid.Row="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" />

                <TextBlock Text="Trade Token"
                           Grid.Column="0"
                           Grid.Row="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left" />

                <ComboBox Grid.Column="1"
                          Name="TradeSteamAccountComboBox"
                          Height="22"
                          Grid.Row="0"
                          Margin="0, 4"
                          ItemsSource="{Binding SteamUserList}"
                          SelectedItem="{Binding SelectedTradeAppId}">

                    <ComboBox.ItemTemplate>
                        <DataTemplate >
                            <StackPanel Orientation="Horizontal">
                                <Image Width="30"
                                       Height="30"
                                       Source="{Binding Path=Avatar}"
                                       Margin="2, 0, 8, 0" />

                                <TextBlock Text="{Binding Path=Login}" VerticalAlignment="Center" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBox Grid.Column="1"
                         Name="TradeSteamIdTextBox"
                         Text=""
                         Height="22"
                         Grid.Row="1"
                         Margin="0, 4" />

                <TextBox Grid.Column="1"
                         Name="TradeTokenTextBox"
                         Text=""
                         Height="22"
                         Grid.Row="2"
                         Margin="0, 4" />
            </Grid>

            <Button Grid.Column="0"
                    Grid.Row="4"
                    Content="Mark all items"
                    Margin="0, 0, 0, 5"
                    Padding="0" />

            <Button Grid.Column="0"
                    Grid.Row="5"
                    Content="Send trade"
                    Margin="0, 5, 0, 0"
                    Padding="0" />

        </Grid>

    </Grid>
</UserControl>